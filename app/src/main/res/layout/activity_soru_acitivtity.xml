<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".soruAcitivtity"
   android:background="@drawable/arkafoto">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:background="@drawable/ic_keyboard_backspace_black_24dp"
        android:layout_marginVertical="50dp"
        android:backgroundTint="@color/colorPrimary"
        ></Button>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViev4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize ="BANNER"
        ads:adUnitId="ca-app-pub-2261379780093081/4039111653"
        ></com.google.android.gms.ads.AdView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/puan"
        android:layout_marginRight="30dp"

        android:fontFamily="@font/alefregular"
        android:text="Puan:"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        ></TextView>

    <LinearLayout
        android:layout_below="@+id/puan"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/liner"
        android:background="@drawable/customback"
        >

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:fontFamily="@font/alef"
            android:paddingTop="50dp"
            android:text="soru"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22sp"

            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/cevapsiklari"
        android:layout_below="@+id/liner"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/answerA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="hint"
             android:fontFamily="@font/alefregular"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_marginTop="10dp"></Button>

        <Button
            android:id="@+id/answerB"
            android:fontFamily="@font/alefregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answerA"
            android:background="@drawable/custom_button"
            android:text="hint"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"></Button>

        <Button
            android:fontFamily="@font/alefregular"

            android:id="@+id/answerC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answerB"

            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:text="hint"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:padding="20dp"
            android:textSize="20sp"></Button>

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"

        android:id="@+id/adViev3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize ="BANNER"
        ads:adUnitId="ca-app-pub-2261379780093081/1488969934"
        ></com.google.android.gms.ads.AdView>





</RelativeLayout>